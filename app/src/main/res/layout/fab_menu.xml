<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        style="@style/fabLight"
        android:layout_marginBottom="@dimen/margin_bottom_half"
        android:tint="@color/lightAccentWhite"
        android:visibility="invisible"
        app:backgroundTint="@color/lightAccent"
        app:layout_constraintBottom_toTopOf="@id/fab1"
        app:layout_constraintEnd_toEndOf="@id/fab1"
        app:layout_constraintStart_toStartOf="@id/fab1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        style="@style/fabLight"
        android:layout_marginBottom="@dimen/margin_bottom_half"
        android:tint="@color/lightAccentWhite"
        android:visibility="invisible"
        app:backgroundTint="@color/lightAccent"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintEnd_toEndOf="@id/fab"
        app:layout_constraintStart_toStartOf="@id/fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        style="@style/fabDark"
        android:src="@drawable/ic_add"
        android:tint="@color/lightAccentWhite"
        app:backgroundTint="@color/mainBrandColour"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>